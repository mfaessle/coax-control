      <remap from="/coax_server/reach_nav_state" to="/Coax56/reach_nav_state"/>
      <remap from="/coax_server/configure_comm" to="/Coax56/configure_comm"/>
      <remap from="/coax_server/set_timeout" to="/Coax56/set_timeout"/>
    </node>
-->

    <node pkg="coax_ros_control"
          name="coax_ros_control"
          type="coax_ros_control"
	  output="screen">
      <remap from="/coax_ros_control/odom" to="/Coax56/vicon2odometry/odom"/>
      <remap from="/coax_ros_control/state" to="/Coax56/state"/>

      <remap from="/coax_ros_control/rawcontrol" to="/Coax56/rawcontrol"/>

      <remap from="/coax_ros_control/reach_nav_state" to="/Coax56/reach_nav_state"/>
      <remap from="/coax_ros_control/configure_comm" to="/Coax56/configure_comm"/>
      <remap from="/coax_ros_control/set_timeout" to="/Coax56/set_timeout"/>

      <remap from="/coax_ros_control/set_control_mode" to="/Coax56/set_control_mode"/>

      <param name="frequency" value="10"/>
      <param name="CoaX" value="56"/>

      <rosparam file="$(find coax_ros_control)/config/coax_parameters.yaml"/>
    </node>

  </group>

</launch>

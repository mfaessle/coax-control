<launch>

  <node pkg="vicon"
        name="vicon"
        type="vicon"
        output="screen">
  </node>

  <group ns="Coax56">

    <node pkg="vicon_calibrate"
          name="vicon_calibrate"
          type="vicon_calibrate"
          output="screen"
          clear_params="true">
      <remap from="~values" to="/vicon/values"/>
      <remap from="~names" to="/vicon/names"/>
      <param name="calibration" value="$(find coax_vsk)/calibration/Coax56.xml"/>
    </node>

    <node pkg="vicon2odometry"
          name="vicon2odometry"
          type="vicon2odometry"       
          output="screen">
      <remap from="~names" to="/vicon/names"/>
      <remap from="~values" to="/vicon/values"/>
      <remap from="~pose" to="/Coax56/vicon_calibrate/pose"/>
      <remap from="~odom" to="/Coax56/vicon2odometry/odom"/>
      <param name="vsk" value="$(find coax_vsk)/vsk/Coax56.vsk"/>

    </node>

<!--
    <node pkg="coax_server"
          name="coax"
          type="coax_server"
	  output="screen"
          args="/dev/tty.usbserial-A800f3Zv:1">
      <remap from="/coax_server/state" to="/Coax56/state"/>

      <remap from="/coax_server/control" to="/Coax56/control"/>
